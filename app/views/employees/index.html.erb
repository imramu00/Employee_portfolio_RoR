<table class="table  table-striped table-bordered table-hover mytable">
  <thead class="table-dark">
    <tr>
      <th scope="col-5">Employee Name</th>
      <th scope="col-2">View</th>
      <th scope="col-2">Edit</th>
      <th scope="col-2">Delete</th>
    </tr>
  </thead>
  <% @employees.each do |emp| %>
  <tbody>
    <tr>
      <th scope="row"><%= emp.name %></th>
      <td><%= link_to 'View', employee_path(emp) %></td>
      <td><%= link_to 'Edit', edit_employee_path(emp) %></td>
      <td><%= link_to 'Delete', emp, method: :delete%></td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= link_to 'Add Employee', new_employee_path, class: "btn btn-dark" %>
